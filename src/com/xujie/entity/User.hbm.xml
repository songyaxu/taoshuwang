<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping
PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
"http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping>
	<class name="com.xujie.entity.User" table="userinfo">
		<id name="userid" column="Uid" type="int">
			<generator class="identity"> <!-- 主键id的生成方式为自增 -->
			</generator>
		</id>
		<property name="username" column="Uname" type="string"></property>
		<property name="password" column="Upassword" type="string"></property>
		<property name="address" column="Uaddress" type="string"></property>
		<property name="sex" column="Usex" type="string"></property>
		<property name="phone" column="Uphone" type="string"></property>
		<property name="email" column="Uemail" type="string"></property>
		<property name="check" column="Ucheck" type="string"></property>
		<property name="answer" column="Uanswer" type="string"></property>
	</class>
</hibernate-mapping>